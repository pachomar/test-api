{
  "name": "nest-api",
  "version": "0.0.10",
  "description": "Generic NEST API boilerplate",
  "author": "lucas@pandodev.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist && npm run generate-typings",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prestart": "npm run generate-typings",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --color",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "generate-typings": "ts-node src/generate-typings.ts",
    "typings:dev": "ts-node src/generate-typings.dev.ts",
    "seed": "ts-node -r tsconfig-paths/register src/seed.ts",
    "prettier:check": "prettier --check ./**/*.{ts,js,json,*rc}",
    "prettier:write": "prettier --write ./**/*.{ts,js,json,*rc}",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@apollo/gateway": "^2.7.1",
    "@apollo/server": "^4.11.0",
    "@graphql-tools/utils": "^8.11.0",
    "@nestjs/apollo": "^12.2.1",
    "@nestjs/common": "^10.4.6",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.4.6",
    "@nestjs/graphql": "^12.2.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/testing": "^10.3.3",
    "@nestjs/typeorm": "^10.0.2",
    "@ntegral/nestjs-sendgrid": "^1.0.0",
    "@sendgrid/mail": "^8.1.4",
    "@types/stripe": "^8.0.417",
    "aws-sdk": "^2.996.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.14.1",
    "crypto": "^1.0.1",
    "exceljs": "^4.2.1",
    "graphql": "^16.8.1",
    "graphql-tools": "^8.2.0",
    "graphql-type-json": "^0.3.2",
    "handlebars": "^4.7.7",
    "helmet": "^4.6.0",
    "joi": "^17.4.2",
    "migrate": "^1.7.0",
    "mime-types": "^2.1.31",
    "moment": "^2.29.1",
    "mysql2": "^3.11.3",
    "nest-winston": "^1.6.2",
    "nestjs-command": "^3.1.4",
    "nodemailer": "^6.6.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "stripe": "^8.186.1",
    "swagger-ui-express": "^4.1.6",
    "ts-morph": "^21.0.0",
    "typeorm": "^0.3.20",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.2.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/multer": "^1.4.5",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.11",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^29.7.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^5.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
